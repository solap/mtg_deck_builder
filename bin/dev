#!/bin/bash
# Development server script
# Loads environment variables from .env.local and starts Phoenix

set -e

cd "$(dirname "$0")/.."

# Load .env.local if it exists
if [ -f .env.local ]; then
  echo "Loading environment from .env.local..."
  set -a
  source .env.local
  set +a
fi

# Start Phoenix server
exec mix phx.server "$@"
